generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Float
  rating      Float
  reviewCount Int
  imageUrl    String
  amazonUrl   String?
  category    String   @default("General")
  listName    String   @default("Top 10")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
